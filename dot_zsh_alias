# --- better ls ---
alias ls="eza --color=always --long --git --icons=always --no-time --no-user --no-permissions --all --git-ignore"
alias tree="eza --color=always --long --git --icons=always --no-time --no-user --no-permissions --tree --all --git-ignore"
